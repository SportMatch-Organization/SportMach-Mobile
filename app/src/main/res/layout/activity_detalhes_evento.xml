<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ui.DetalhesEventoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 1. CABEÇALHO E IMAGEM -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:background="@android:color/holo_orange_dark">

            <ImageView
                android:id="@+id/image_fundo_evento"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_volei"
                android:contentDescription="Imagem do evento de Vôlei de areia"/>

            <TextView
                android:id="@+id/text_titulo_evento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Vôlei de areia Pajuçara"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_alignTop="@id/image_fundo_evento"
                android:layout_alignParentStart="true"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                />
        </RelativeLayout>


        <!-- 2. CARD DE DETALHES -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="-32dp"
            android:padding="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp">

                    <!-- CABEÇALHO DA SEÇÃO DETALHES (COM ÍCONE) -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_details_orange"
                            android:contentDescription="Ícone de detalhes"
                            android:tint="@android:color/holo_orange_dark"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Detalhes"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_preco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="R$ 20,00"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <!-- INCLUDE DE DETALHES -->
                <include layout="@layout/item_detalhe_evento" android:id="@+id/item_esporte" />
                <include layout="@layout/item_detalhe_evento" android:id="@+id/item_modalidade" />
                <include layout="@layout/item_detalhe_evento" android:id="@+id/item_categoria" />
                <include layout="@layout/item_detalhe_evento" android:id="@+id/item_subcategoria" />
                <include layout="@layout/item_detalhe_evento" android:id="@+id/item_formato" />
                <include layout="@layout/item_detalhe_evento" android:id="@+id/item_acessibilidade" />
                <include layout="@layout/item_detalhe_evento" android:id="@+id/item_max_atletas" />
                <include layout="@layout/item_detalhe_evento" android:id="@+id/item_min_atletas" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- 3. LOCAL (MAPA) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"> <!-- Adicionado paddingBottom para separar do mapa -->

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_location_orange"
                android:contentDescription="Ícone de localização"
                android:tint="@android:color/holo_orange_dark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Local"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_mapa"
            android:contentDescription="Placeholder de mapa de localização" />


        <!-- 4. CARD DE CRONOGRAMA -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- CABEÇALHO DA SEÇÃO CRONOGRAMA (COM ÍCONE) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_schedule_orange"
                        android:contentDescription="Ícone de cronograma"
                         android:tint="@android:color/holo_orange_dark"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Cronograma"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>

                <!-- INCLUDE DE CRONOGRAMA -->
                <include layout="@layout/item_cronograma" android:id="@+id/item_data_inicio_inscricoes" />
                <include layout="@layout/item_cronograma" android:id="@+id/item_data_fim_inscricoes" />
                <include layout="@layout/item_cronograma" android:id="@+id/item_inicio_competicao" />
                <include layout="@layout/item_cronograma" android:id="@+id/item_fim_competicao" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 5. BOTÃO INSCREVER-SE -->
        <Button
            android:id="@+id/btn_inscrever_se"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:text="Inscrever-se"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>